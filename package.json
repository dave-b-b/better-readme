{
  "name": "better-readme",
  "version": "1.0.0",
  "description": "Format README files with hierarchical styling and centered headers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "readme-format": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
